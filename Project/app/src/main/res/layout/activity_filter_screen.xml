<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.FilterScreen">

<!--    Mobile Platform Development-->
<!--    Iyosiyas Workie Mitiku - S1803446-->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Iyosiyas Workie Mitiku - S1803446" />

    <EditText
        android:id="@+id/startDatePicker"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/start_date"
        android:inputType="date" />

    <EditText
        android:id="@+id/endDatePicker"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/startDatePicker"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="End date"
        android:inputType="date" />

    <Button
        android:id="@+id/runFilterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endDatePicker"
        android:layout_marginTop="1dp"
        android:text="RUN FILTER" />

    <LinearLayout
        android:id="@+id/filterData"
        android:layout_width="match_parent"
        android:layout_height="413dp"
        android:layout_below="@+id/runFilterBtn"
        android:layout_marginTop="42dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="15dp">

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="41dp"
        android:text="From: " />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="134dp"
        android:text="To: " />


</RelativeLayout>