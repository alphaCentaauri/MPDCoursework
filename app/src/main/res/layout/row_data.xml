<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    Mobile Platform Development-->
    <!--    Iyosiyas Workie Mitiku - S1803446-->

    <RelativeLayout
        android:id="@+id/gridviewdata"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorBackgroundDefault">
        <!--        android:paddingBottom="5dp">-->

        <TextView
            android:id="@+id/magnitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="56dp"
            android:text="@string/magnitude"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/quakeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:text="@string/region_date"
            android:textColor="@android:color/secondary_text_dark"
            android:textColorHighlight="@android:color/secondary_text_dark"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/regions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="33dp"
            android:text="@string/region_name"
            android:textColorHighlight="#00000000"
            android:textColorLink="#2196F3"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>